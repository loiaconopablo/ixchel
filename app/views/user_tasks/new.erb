<h1>Estimar Tarea</h1>
<% form_for(@user_task, "/user_tasks/update/#{@user_task.id}") do |f| %> 
  Titulo:
  <br>
  <%= @user_task.title %>
  <br>
  <%= @user_task.limit_date %>
  <br>
  Tiempo Estimado: (en minutos)
  <br>
  <%= f.text_field :estimated_time %>
  <br>
  Tiempo Real: (en minutos)
  <br>
  <%= f.text_field :real_time %>
  <br>
  <%= f.submit "Aceptar", :class => "btn btn-primary" %>
<% end %>
